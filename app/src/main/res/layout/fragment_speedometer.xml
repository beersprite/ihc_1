<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.speedometer.SpeedometerFragment">

    <EditText
        android:id="@+id/x_axis"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="X "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/y_axis"
        app:layout_constraintStart_toStartOf="@+id/y_axis"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/z_axis"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="212dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Z "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y_axis" />

    <EditText
        android:id="@+id/y_axis"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Y "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/z_axis"
        app:layout_constraintStart_toStartOf="@+id/z_axis"
        app:layout_constraintTop_toBottomOf="@+id/x_axis" />

    <Button
        android:id="@+id/speed_send_button"
        android:layout_width="119dp"
        android:layout_height="68dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="597dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="66dp"
        android:text="@string/send_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>