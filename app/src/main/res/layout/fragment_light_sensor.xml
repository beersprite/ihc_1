<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sensors.LightSensorFragment">

    <TextView
        android:id="@+id/light_textview"
        android:layout_width="261dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="59dp"
        android:text="Light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/temperature_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pressure_textview"
        android:layout_width="261dp"
        android:layout_height="0dp"
        android:layout_marginBottom="82dp"
        android:text="Pressure"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gps_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_textview" />

    <TextView
        android:id="@+id/temperature_textview"
        android:layout_width="261dp"
        android:layout_height="0dp"
        android:layout_marginBottom="61dp"
        android:text="Temperature"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pressure_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light_textview" />

    <Button
        android:id="@+id/gps_button"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginBottom="141dp"
        android:backgroundTint="#0097A7"
        android:text="get GPS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pressure_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>